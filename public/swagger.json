    "/api/v1/playlists": {
      "get": {
        "summary": "Get playlist by ID or link",
        "description": "Retrieve detailed information about a playlist using either its ID or a direct link.\nReturns comprehensive playlist data including track list and metadata with pagination support.\n",
        "tags": [
          "Playlists"
        ],
        "security": [
          {
            "AccessToken": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "description": "Playlist ID"
          },
          {
            "in": "query",
            "name": "link",
            "schema": {
              "type": "string",
              "format": "uri"
            },
